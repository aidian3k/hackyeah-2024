{
  "endOfLine": "auto",
  "overrides": [
    {
      "files": "*.java",
      "options": {
        "useTabs": true
      }
    },
    {
      "files": ["*.ts", "*.tsx", "*.scss", "*.js"],
      "options": {
        "trailingComma": "none",
        "singleQuote": true,
        "printWidth": 140,
        "quoteProps": "as-needed",
        "arrowParens": "avoid"
      }
    }
  ]
}